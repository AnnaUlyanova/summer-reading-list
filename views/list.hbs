<h1>My Reading List</h1>

<ul class="list-group">
  {{#each books}}
    <p class="list-group-item"><strong>{{title}}</strong>: {{author}}</p>
    <form action="/reading-list" method="post">
      <p><button class="btn btn-primary" role="button">Delete</button></p>
  {{/each}}
</ul>

</form>
<form class="container" action="/notes/:id" method="post">
  <h4>Write a Review</h4>
  <div class="form-group">
    <label for="inputName">Name</label>
    <input type="text" class="form-control" id="inputName" placeholder="Enter name">
  </div>
  <div class="form-group">
    <label for="inputComment">Comment</label>
    <textarea class="form-control" id="inputComment" rows="3" placeholder="Write comment"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Add Review</button>
</form>
